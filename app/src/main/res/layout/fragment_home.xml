<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Top Bar -->
    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menubar" />

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@id/ivLogo"
        app:layout_constraintStart_toEndOf="@id/ivMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/searchbar" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">

            <!-- Greeting Texts -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_to_wellnest"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginBottom="16dp"/>

            <!-- Completion Card (Habit Percentage) -->
            <LinearLayout
                android:id="@+id/card_completion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_s_progress"
                    android:textColor="#240C50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_completion_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/progress_percentage"
                    android:textColor="@color/background1"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_completion_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/start_adding_habits"
                    android:textColor="@color/text_color2"
                    android:textSize="13sp" />

                <ProgressBar
                    android:id="@+id/progress_completion"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="12dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/background1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weekly_mood_trend"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#240C50"
                android:gravity="center"
                android:layout_marginTop="24dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_mood_trend"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/mood_trend_desc" />


            <!-- Features Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_features"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#240C50"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Habit Tracking Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/card_background"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_habit" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/habit_tracking"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#240C50" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/habit_desc"
                        android:textSize="13sp"
                        android:textColor="@color/text_color2"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/btn_view_habits"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/view_habits"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/background1"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Mood Journal Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/card_background"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_mood" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mood_journal"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#240C50" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mood_desc"
                        android:textSize="13sp"
                        android:textColor="@color/text_color2"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/btn_log_mood"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/log_mood"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/background1"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Hydration Reminder Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/card_background"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_water" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hydration_reminders"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#240C50" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reminder_desc"
                        android:textSize="13sp"
                        android:textColor="@color/text_color2"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/btn_set_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/set_reminder"
                        android:textSize="11sp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/background1"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>