<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Completion Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Progress"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#240C50" />

            <TextView
                android:id="@+id/tv_completion_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="0%"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#644495" />

            <TextView
                android:id="@+id/tv_completion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Start adding habits to track your progress!"
                android:textSize="14sp"
                android:textColor="#666"
                android:gravity="center" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="16dp"
                android:progress="0"
                android:max="100"
                android:progressTint="#644495" />

        </LinearLayout>

        <!-- Features Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Features"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#240C50"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Habit Tracking Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="2dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_habit"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Habit Tracking"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#240C50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track your daily wellness habits and build healthy routines"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btn_view_habits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="View Habits"
                    android:textAllCaps="false"
                    android:backgroundTint="#644495"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Mood Journal Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="2dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_mood"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mood Journal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#240C50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log your daily mood with emojis and track your emotional wellness"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btn_log_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Log Mood"
                    android:textAllCaps="false"
                    android:backgroundTint="#644495"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Step Tracking Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="2dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_steps"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step Counter"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#240C50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track your daily steps and stay active with built-in sensors"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btn_track_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Track Steps"
                    android:textAllCaps="false"
                    android:backgroundTint="#644495"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Hydration Reminder Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="2dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_water"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hydration Reminders"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#240C50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set customizable reminders to drink water and stay hydrated"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configure in Settings"
                    android:textSize="12sp"
                    android:textColor="#644495"
                    android:textStyle="italic"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>